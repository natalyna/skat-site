<div class="row">
    {{#each news as |item|}}
        <div class="col-md-4">
            {{#link-to 'news.show' item.id class="news-item"}}
                {{#if item.isProject}}
                    <img src="{{item.imgSrc}}" alt="" class="news-item__image">
                {{/if}}
                <div class="news-item__layout {{if item.isProject 'news-item__layout_project'}}">
                    <div class="news-item__header">
                        <span class="icons icons_clock"></span>
                        <small class="news-item__date">{{moment-format item.publDate 'DD MMMM YYYY' 'DD.MM.YYYY'}}</small>                        
                    </div>
                    <div class="news-item__text">{{item.label}}</div>
                    <div class="news-item__footer">
                        {{#if item.isAction}}
                            <span class="badge badge_action">Акция</span>
                            <small>{{item.expiration}}</small>
                        {{/if}}
                    </div>
                </div>
            {{/link-to}}
        </div>
    {{/each}}
</div>

<div class="row">
    {{#each projects as |project| }}
        <div class="col-md-6">
            {{#link-to 'projects.show' project.id class="projects-item" }}
                <img src="{{project.heroImgSrc}}" alt="{{project.name}}" class="projects-item__image">
                <div class="projects-item__info">
                    <h2 class="projects-item__header">{{project.name}}</h2>
                    <div class="projects-item__description">{{project.type}}</div>
                    <div class="projects-item__footer">
                        <div class="projects-item__expiration">Срок сдачи: {{moment-format project.expiration 'MMMM YYYY' 'DD.MM.YYYY'}}</div>
                        <div class="projects-item__address">
                            <span class="projects-item__address-pin"></span>
                            <span class="projects-item__address-short">{{project.addressShort}}</span>
                        </div>
                    </div>
                </div>
            {{/link-to}}
        </div>
    {{/each}}
</div>

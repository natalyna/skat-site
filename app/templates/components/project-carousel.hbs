<ol class="carousel-indicators">
    {{#each items as |item index|}}
        <li data-target="#{{id}}" data-slide-to="{{index}}" class="{{if (eq index 0) "active" }}"></li>
    {{/each}}
</ol>
<div class="carousel-inner" role="listbox">
    {{#each items as |item index|}}
        <div class="item  {{if (eq index 0) "active" }}">
            <img src="{{item.imgSrc}}" alt="{{item.imgAlt}} {{index}}" class="carousel__image">
        </div>
    {{/each}}
</div>

<a class="left carousel-control" href="#{{id}}" role="button" data-slide="prev">
    <span class="carousel__ctrl carousel__ctrl_left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#{{id}}" role="button" data-slide="next">
    <span class="carousel__ctrl carousel__ctrl_right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>
